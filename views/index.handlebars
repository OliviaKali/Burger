<h1>Eat the Burgers!</h1>

<img class="burgerImage" src="https://tmbidigitalassetsazure.blob.core.windows.net/secure/RMS/attachments/37/1200x1200/exps28800_UG143377D12_18_1b_RMS.jpg"
alt="Burger">

<div class="centerBurgers">  

<div class="notDevoured">
<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="addBurger">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>


<div class="devouredBurgers">
<h2>Burgers that are devoured!</h2>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>
